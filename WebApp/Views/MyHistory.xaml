<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WebApp.Views.MyHistory"
             Title="My History">
    <ContentPage.Content>
        <ListView x:Name="Summary" ItemsSource="{Binding singles}" ItemTapped="toNextLevel"
                  RowHeight="180">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="180">
                        <Frame MinimumHeightRequest="180" CornerRadius="30" BorderColor="#42C2A9" Margin="5"
                               BackgroundColor="{Binding randomColour()}" HasShadow="true">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                               <StackLayout Grid.Column="0">
                                   <Label Text="Taskname: "
                                          Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                   <Label Text="Taskid : "
                                          Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/> 
                                   <Label Text="Status: "
                                          Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                   <Label Text="Total progress : "
                                          Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>  
                               </StackLayout>
                                
                                <StackLayout Grid.Column="1">
                                    <Label Text="{Binding taskname}"
                                           Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                    <Label Text="{Binding taskid}"
                                           Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                    <Label Text="{Binding completed}" 
                                           Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                    <Label Text="{Binding percentageString}" 
                                           Style="{StaticResource regLabel}" FontFamily="{StaticResource Handlee}"/>
                                </StackLayout>
                                
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>