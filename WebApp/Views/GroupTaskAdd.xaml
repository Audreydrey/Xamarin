<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApp.Views.GroupTaskAdd">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Task name" />
            <Entry x:Name="taskName" />
            <Label Text="Repetition" />
            <ListView VerticalOptions="Start" HeightRequest="120"
                      x:Name="RepetitionList" RowHeight="30">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Daily</x:String>
                        <x:String>Weekly</x:String>
                        <x:String>Monthly</x:String>
                        <x:String>None</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
            <Label Text="Frequency" />
            <Entry x:Name="Frequency" Keyboard="Numeric" />
            <Button Text="Confirm" Clicked="OnConfirm" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>